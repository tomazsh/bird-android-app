<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
    >
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp">

        <com.loopj.android.image.SmartImageView
            android:id="@+id/avatar_view"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:background="#b0b0b0" />
        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_toEndOf="@id/avatar_view"
            android:layout_marginTop="-3dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="Tomaz Nedeljko"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lineSpacingMultiplier="1.35"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/screen_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avatar_view"
            android:layout_below="@+id/name_text_view"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="tomazsh"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.35"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/tweets_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screen_name_text_view"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="Tweets"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.35"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/tweet_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tweets_text_view"
            android:layout_below="@+id/screen_name_text_view"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="8"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.35"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/followers_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tweet_count_text_view"
            android:layout_below="@+id/screen_name_text_view"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="Followers"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.35"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/follower_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/followers_text_view"
            android:layout_below="@+id/screen_name_text_view"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="8"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.35"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/followings_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/follower_count_text_view"
            android:layout_below="@+id/screen_name_text_view"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="Followers"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.35"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/following_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/followings_text_view"
            android:layout_below="@+id/screen_name_text_view"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="8"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.35"
            android:maxLines="1"
            />

        <LinearLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tweets_text_view"
            android:layout_marginTop="12dp"
            android:background="#b0b0b0"></LinearLayout>

        <FrameLayout
            android:id="@+id/timeline_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/separator"
            ></FrameLayout>

        </RelativeLayout>
</LinearLayout>